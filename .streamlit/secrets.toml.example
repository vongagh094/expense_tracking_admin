# Streamlit Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to version control

[firebase]
# Firebase Admin SDK Configuration
# You can either use a service account key file or individual fields

# Option 1: Service Account Key File Path (recommended for local development)
service_account_key_path = "path/to/your/serviceAccountKey.json"

# Option 2: Individual Firebase Configuration Fields (recommended for deployment)
type = "service_account"
project_id = "your-firebase-project-id"
private_key_id = "your-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
client_email = "firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
client_id = "your-client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com"

[database]
# Firebase Database Configuration
firebase_url = "https://your-project-default-rtdb.firebaseio.com/"
firestore_project_id = "your-firebase-project-id"

[auth]
# Admin Authentication Configuration
admin_emails = [
    "admin1@example.com",
    "admin2@example.com"
]
# Simple password for demo (use proper authentication in production)
admin_password = "your-secure-admin-password"
# JWT secret for session management
jwt_secret = "your-jwt-secret-key-here"

[app]
# Application Configuration
app_title = "Firebase Admin Dashboard"
app_icon = "ðŸ”¥"
debug_mode = false
log_level = "INFO"

[audit]
# Audit Configuration
audit_collection_name = "admin_audit_logs"
audit_retention_days = 90
enable_audit_logging = true

[ui]
# UI Configuration
items_per_page = 20
max_file_upload_size = 10  # MB
show_debug_info = false
theme_color = "#FF6B6B"