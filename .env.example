# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 1: Use service account file path
FIREBASE_CREDENTIALS_PATH=path/to/your/service-account-key.json

# Option 2: Use service account JSON string (alternative to file path)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Application Configuration
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# Admin Configuration
ADMIN_EMAIL_DOMAIN=@yourdomain.com
ALLOWED_ADMIN_EMAILS=admin1@yourdomain.com,admin2@yourdomain.com

# UI Configuration
PAGE_SIZE=20
MAX_SEARCH_RESULTS=100

# Security Configuration
SESSION_TIMEOUT_MINUTES=60
REQUIRE_HTTPS=false

# Audit Configuration
AUDIT_COLLECTION_NAME=audit_logs
AUDIT_RETENTION_DAYS=365

# Database Collections (optional - defaults provided)
USERS_COLLECTION=users
CITIZEN_CARDS_COLLECTION=citizen_cards
RESIDENCE_COLLECTION=residence
HOUSEHOLD_MEMBERS_SUBCOLLECTION=household_members